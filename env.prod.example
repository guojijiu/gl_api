# 生产环境配置示例
# 请复制此文件为 .env.prod 并修改相应的值

# 数据库配置
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
DB_PASSWORD=your_strong_db_password_here

# Redis配置
REDIS_PASSWORD=your_strong_redis_password_here

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_for_production

# Grafana配置
GRAFANA_PASSWORD=your_grafana_admin_password_here

# 服务器配置
SERVER_MODE=production
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file

# 安全配置
SECURITY_ENABLED=true
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOGIN_LOCKOUT_DURATION=15m

# 性能监控配置
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_MONITORING_INTERVAL=30s

# 威胁防护配置
THREAT_PROTECTION_ENABLED=true
THREAT_INTELLIGENCE=true
THREAT_TI_UPDATE_INTERVAL=24h

# 邮件配置（如果需要）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com

# 文件存储配置
STORAGE_PATH=/app/storage
MAX_FILE_SIZE=10485760  # 10MB

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600  # 1小时

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # 秒
